<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Building Energy Docs – Monitor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background:#f5f6f8; }
    .brand-bar { background:#0d6efd; color:#fff; }
    .brand-bar .container { padding:.85rem 0; font-weight:600; }
    .page-wrap { max-width: 1100px; margin: 0 auto; }
    .section-card { margin-top: 1.25rem; }
    .juris-badge { text-transform: uppercase; letter-spacing:.03em; }
    .table thead th { white-space: nowrap; }
    .thumb { width: 68px; height: 96px; object-fit: cover; border:1px solid #dee2e6; border-radius:.25rem; background:#fff; }
    .accordion-item { border-radius:.75rem; overflow:hidden; }
    @media (max-width: 575.98px) {
      .table-responsive { border:0; }
      table.responsive-table thead { display:none; }
      table.responsive-table tbody tr {
        display:block; border:1px solid #dee2e6; border-radius:.75rem;
        padding:.5rem .75rem; margin-bottom:.75rem; background:#fff;
      }
      table.responsive-table tbody td { display:block; border:0 !important; padding:.25rem 0; }
      table.responsive-table tbody td[data-label]::before {
        content: attr(data-label);
        display:block; font-weight:600; color:#6c757d; margin-bottom:.15rem;
      }
      .thumb { width: 90px; height: 120px; }
      .mobile-actions { display:flex; gap:.5rem; margin-top:.35rem; }
    }
  </style>
</head>
<body>
  <div class="brand-bar">
    <div class="container page-wrap">Building Energy Docs – Monitor</div>
  </div>

  <main class="container page-wrap">
    <div class="card shadow-sm section-card">
      <div class="card-body">
        <h3 class="card-title mb-2">Publication History</h3>
        <p class="mb-3 text-muted">
          Machine-readable dataset:
          <a href="{{ current_json_url or 'current.json' }}" class="link-primary">current.json</a>
        </p>

        {% macro pick_pdf(row) -%}
          {%- set url = '' -%}
          {%- if row.pdf_url is defined and row.pdf_url -%}{%- set url = row.pdf_url -%}
          {%- elif row.pdf is defined -%}
            {%- if row.pdf is string -%}{%- set url = row.pdf -%}
            {%- elif row.pdf.href is defined -%}{%- set url = row.pdf.href -%}{%- endif -%}
          {%- elif row.links is defined and row.links.pdf is defined and row.links.pdf -%}
            {%- set url = row.links.pdf -%}
          {%- elif row.PDF is defined and row.PDF -%}{%- set url = row.PDF -%}{%- endif -%}
          {{- url -}}
        {%- endmacro %}

        {% macro pick_history(row) -%}
          {%- set url = '' -%}
          {%- if row.history_url is defined and row.history_url -%}{%- set url = row.history_url -%}
          {%- elif row.history is defined -%}
            {%- if row.history is string -%}{%- set url = row.history -%}
            {%- elif row.history.href is defined -%}{%- set url = row.history.href -%}{%- endif -%}
          {%- elif row.links is defined and row.links.history is defined and row.links.history -%}
            {%- set url = row.links.history -%}{%- endif -%}
          {{- url -}}
        {%- endmacro %}

        {% set order = ['england','wales','scotland','northern-ireland','ireland'] %}
        {% set items_by_jur = {} %}
        {% for row in items %}
          {% set j = (row.jurisdiction or '').lower() %}
          {% if j not in items_by_jur %}{% set _ = items_by_jur.update({j: []}) %}{% endif %}
          {% set _ = items_by_jur[j].append(row) %}
        {% endfor %}

        <div class="accordion" id="jurAccordion">
          {% macro table_for(rows, jur) %}
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-sm align-middle mb-0 responsive-table">
                <thead class="table-light">
                  <tr>
                    <th style="width:10%">Preview</th>
                    <th style="width:22%">Track</th>
                    <th>Title</th>
                    <th style="width:12%">Issued</th>
                    <th style="width:10%">Version</th>
                    <th style="width:20%" class="text-center">PDF / History</th>
                  </tr>
                </thead>
                <tbody>
                  {% for row in rows %}
                    {% set title = row.title or row.name %}
                    {% set pdf_url = pick_pdf(row) %}
                    {% set history_url = pick_history(row) %}
                    <tr>
                      <td data-label="Preview">
                        {% if row.thumb_url and pdf_url %}
                          <a href="{{ pdf_url }}" target="_blank" rel="noopener">
                            <img class="thumb" src="{{ row.thumb_url }}" alt="Thumbnail of {{ title }}">
                          </a>
                        {% elif row.thumb_url %}
                          <img class="thumb" src="{{ row.thumb_url }}" alt="Thumbnail of {{ title }}">
                        {% else %}
                          <span class="text-muted">—</span>
                        {% endif %}
                      </td>
                      <td data-label="Track">{{ row.track }}</td>
                      <td data-label="Title">{{ title }}</td>
                      <td data-label="Issued">{{ row.issued }}</td>
                      <td data-label="Version">{{ row.version }}</td>
                      <td data-label="Actions" class="text-center">
                        <div class="d-none d-sm-inline-flex align-items-center">
                          {% if pdf_url %}
                            <a class="btn btn-outline-primary btn-sm" href="{{ pdf_url }}" target="_blank" rel="noopener">Open PDF</a>
                          {% else %}
                            <span class="text-muted">No PDF</span>
                          {% endif %}
                          {% if history_url %}
                            <a class="btn btn-outline-secondary btn-sm ms-2" href="{{ history_url }}" target="_blank" rel="noopener">History</a>
                          {% endif %}
                        </div>
                        <div class="mobile-actions d-sm-none">
                          {% if pdf_url %}
                            <a class="btn btn-outline-primary btn-sm w-100" href="{{ pdf_url }}" target="_blank" rel="noopener">Open PDF</a>
                          {% endif %}
                          {% if history_url %}
                            <a class="btn btn-outline-secondary btn-sm w-100" href="{{ history_url }}" target="_blank" rel="noopener">History</a>
                          {% endif %}
                          {% if not pdf_url and not history_url %}
                            <span class="text-muted small">No actions</span>
                          {% endif %}
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% endmacro %}

          {% for jur in order if jur in items_by_jur %}
            {% set panel_id = 'jur-' ~ jur.replace(' ','-') %}
            <div class="accordion-item shadow-sm mb-3">
              <h2 class="accordion-header" id="{{ panel_id }}-head">
                <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button"
                        data-bs-toggle="collapse" data-bs-target="#{{ panel_id }}-body"
                        aria-expanded="{{ 'true' if loop.first else 'false' }}" aria-controls="{{ panel_id }}-body">
                  <span class="juris-badge badge bg-primary me-2">{{ jur }}</span>
                  <span class="text-muted small">{{ items_by_jur[jur]|length }} document{{ '' if items_by_jur[jur]|length == 1 else 's' }}</span>
                </button>
              </h2>
              <div id="{{ panel_id }}-body" class="accordion-collapse collapse {% if loop.first %}show{% endif %}" aria-labelledby="{{ panel_id }}-head">
                <div class="accordion-body p-0">
                  {{ table_for(items_by_jur[jur], jur) }}
                </div>
              </div>
            </div>
          {% endfor %}

          {% for jur, rows in items_by_jur.items() if jur not in order %}
            {% set panel_id = 'jur-' ~ jur.replace(' ','-') %}
            <div class="accordion-item shadow-sm mb-3">
              <h2 class="accordion-header" id="{{ panel_id }}-head">
                <button class="accordion-button collapsed" type="button"
                        data-bs-toggle="collapse" data-bs-target="#{{ panel_id }}-body"
                        aria-expanded="false" aria-controls="{{ panel_id }}-body">
                  <span class="juris-badge badge bg-secondary me-2">{{ jur }}</span>
                  <span class="text-muted small">{{ rows|length }} document{{ '' if rows|length == 1 else 's' }}</span>
                </button>
              </h2>
              <div id="{{ panel_id }}-body" class="accordion-collapse collapse" aria-labelledby="{{ panel_id }}-head">
                <div class="accordion-body p-0">
                  {{ table_for(rows, jur) }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
