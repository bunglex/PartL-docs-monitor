<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Energy Docs Monitor</title>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <span class="navbar-brand">Building Energy Docs – Monitor</span>
    </div>
  </nav>
  <main class="container pb-5">
    <section class="card shadow-sm border-0 mb-4">
      <div class="card-body">
        <h1 class="card-title h3 mb-3">Current Publications</h1>
        <p class="card-text text-muted mb-0">Tracking <strong>{{ items|length }}</strong> energy document{{ items|length != 1 and "s" or "" }} across jurisdictions.</p>
      </div>
    </section>
    <div class="table-responsive shadow-sm d-none d-md-block">
      <table class="table table-striped table-hover align-middle mb-3">
        <thead class="table-light">
          <tr>
            <th scope="col">Jurisdiction</th>
            <th scope="col">Track</th>
            <th scope="col">Name</th>
            <th scope="col">Issued</th>
            <th scope="col">Version</th>
            <th scope="col">PDF</th>
            <th scope="col">History</th>
          </tr>
        </thead>
        <tbody>
        {% for it in items %}
          <tr>
            <td>{{ it.jurisdiction }}</td>
            <td>{{ it.track_title or it.track }}</td>
            <td>{{ it.name }}</td>
            <td>{{ it.issued or "" }}</td>
            <td>{{ it.rule_version }}</td>
            <td><a class="btn btn-sm btn-outline-primary" href="{{ it.source_url }}" target="_blank" rel="noopener">Open PDF</a></td>
            <td><a class="btn btn-sm btn-outline-secondary" href="history/{{ it.slug }}.html">History</a></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="d-md-none">
      <div class="row g-3">
        {% for it in items %}
        <div class="col-12">
          <article class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <p class="badge bg-primary-subtle text-primary-emphasis text-uppercase mb-1">{{ it.jurisdiction }}</p>
                  <h2 class="h5 mb-0">{{ it.name }}</h2>
                </div>
                <span class="badge bg-secondary-subtle text-secondary-emphasis">v{{ it.rule_version }}</span>
              </div>
              <p class="text-muted small mb-3">{{ it.track_title or it.track }}</p>
              <dl class="row mb-3">
                <dt class="col-5 text-muted">Issued</dt>
                <dd class="col-7">{{ it.issued or "—" }}</dd>
              </dl>
              <div class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-primary flex-fill" href="{{ it.source_url }}" target="_blank" rel="noopener">Open PDF</a>
                <a class="btn btn-sm btn-outline-secondary flex-fill" href="history/{{ it.slug }}.html">History</a>
              </div>
            </div>
          </article>
        </div>
        {% endfor %}
      </div>
    </div>
    <p class="text-muted">Machine-readable dataset: <a href="current.json" class="link-primary">current.json</a></p>
  </main>
</body>
</html>
