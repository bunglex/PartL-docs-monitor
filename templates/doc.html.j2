<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{ item.name }} — {{ item.jurisdiction }}</title>
</head>
<body>
  <p><a href="../index.html">← Back</a></p>
  <h1>{{ item.name }} — {{ item.jurisdiction }}</h1>
  <p>Version: {{ item.rule_version }}</p>
  <p>Current PDF: <a href="{{ item.source_url }}">{{ item.source_url }}</a></p>

  <h2>History</h2>
  <ul>
  {% for h in item.history|reverse %}
    <li>
      {{ h.date }} — checksum: {{ h.checksum }}
      {% if h.archived_pdf %} — <a href="../{{ h.archived_pdf }}">archived PDF</a>{% endif %}
      {% if h.diff %} — <a href="../{{ h.diff }}">diff</a>{% endif %}
    </li>
  {% endfor %}
  </ul>
</body>
</html>
