<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Building Energy Docs – Monitor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <!-- Bootstrap 5.3.2 (CSS) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
    crossorigin="anonymous">

  <style>
    body { background:#f7f7f9; }
    .page-wrap { max-width: 1100px; margin: 0 auto; }
    .brand-bar { background:#0d6efd; color:#fff; }
    .brand-bar .container { padding: .8rem 1rem; font-weight:600; }
    .section-card { margin-top: 2rem; }
    .juris-header .badge { text-transform: uppercase; letter-spacing:.03em; }
    .table thead th { white-space: nowrap; }
    .btn-wrapped { line-height:1.1 }
  </style>
</head>
<body>

  <div class="brand-bar">
    <div class="container page-wrap">Building Energy Docs – Monitor</div>
  </div>

  <main class="container page-wrap">
    <div class="card section-card">
      <div class="card-body">
        <h3 class="card-title mb-3">Publication History</h3>
        <p class="text-muted">
          Machine-readable dataset:
          <a href="{{ current_json_url or 'current.json' }}" class="link-primary">current.json</a>
        </p>

        {# ----- Group items by jurisdiction in the requested order ----- #}
        {% set order = ['england','wales','scotland','northern-ireland','ireland'] %}
        {% set items_by_jur = {} %}
        {% for row in items %}
          {% set j = (row.jurisdiction or '').lower() %}
          {% if j not in items_by_jur %}{% set _ = items_by_jur.update({j: []}) %}{% endif %}
          {% set _ = items_by_jur[j].append(row) %}
        {% endfor %}

        <div class="accordion" id="jurisdictionAccordion">
          {% for jur in order if jur in items_by_jur %}
            {% set panel_id = 'jur-' ~ jur.replace(' ','-') %}
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="{{ panel_id }}-head">
                <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#{{ panel_id }}-body"
                        aria-expanded="{{ 'true' if loop.first else 'false' }}"
                        aria-controls="{{ panel_id }}-body">
                  <span class="juris-header">
                    <span class="badge bg-primary me-2">{{ jur }}</span>
                    <span class="text-muted small">{{ items_by_jur[jur]|length }} document{{ '' if items_by_jur[jur]|length == 1 else 's' }}</span>
                  </span>
                </button>
              </h2>
              <div id="{{ panel_id }}-body" class="accordion-collapse collapse {% if loop.first %}show{% endif %}"
                   aria-labelledby="{{ panel_id }}-head" data-bs-parent="#jurisdictionAccordion">
                <div class="accordion-body p-0">
                  <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                      <thead class="table-light">
                        <tr>
                          <th style="width:18%">Track</th>
                          <th style="width:42%">Title</th>
                          <th style="width:10%">Issued</th>
                          <th style="width:10%">Version</th>
                          <th style="width:20%" class="text-center">PDF / Preview / History</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for row in items_by_jur[jur] %}
                          {% set title = row.title or row.name %}
                          {% set safe_id = (jur ~ '-' ~ loop.index)|replace(' ','-') %}
                          <tr>
                            <td>{{ row.track }}</td>
                            <td>{{ title }}</td>
                            <td>{{ row.issued }}</td>
                            <td>{{ row.version }}</td>
                            <td class="text-center">
                              <div class="d-inline-flex align-items-center">
                                {% if row.pdf_url %}
                                  <a class="btn btn-outline-primary btn-sm btn-wrapped"
                                     href="{{ row.pdf_url }}" target="_blank" rel="noopener">Open<br>PDF</a>
                                  <button type="button"
                                          class="btn btn-secondary btn-sm ms-2"
                                          data-bs-toggle="modal"
                                          data-bs-target="#preview-{{ safe_id }}">Preview</button>
                                {% else %}
                                  <span class="text-muted">No PDF</span>
                                {% endif %}
                                {% if row.history_url %}
                                  <a class="btn btn-outline-secondary btn-sm ms-2"
                                     href="{{ row.history_url }}" target="_blank" rel="noopener">History</a>
                                {% endif %}
                              </div>

                              {% if row.pdf_url %}
                                <!-- PDF Preview Modal -->
                                <div class="modal fade" id="preview-{{ safe_id }}" tabindex="-1" aria-hidden="true">
                                  <div class="modal-dialog modal-xl modal-dialog-scrollable">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <h5 class="modal-title">{{ title }}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                      </div>
                                      <div class="modal-body p-0" style="height:75vh">
                                        <iframe
                                          src="{{ row.pdf_url }}#view=FitH"
                                          style="width:100%;height:100%;border:0"
                                          referrerpolicy="no-referrer"
                                          onerror="this.replaceWith(Object.assign(document.createElement('div'),{className:'p-3',innerHTML:`Embedding blocked. <a href='{{ row.pdf_url }}' target='_blank' rel='noopener'>Open PDF</a>`}))"
                                        ></iframe>
                                      </div>
                                      <div class="modal-footer">
                                        <a class="btn btn-primary" href="{{ row.pdf_url }}" target="_blank" rel="noopener">Open in new tab</a>
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              {% endif %}
                            </td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}

          {# Any jurisdictions not in the preferred order go last #}
          {% for jur, rows in items_by_jur.items() if jur not in order %}
            {% set panel_id = 'jur-' ~ jur.replace(' ','-') %}
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="{{ panel_id }}-head">
                <button class="accordion-button collapsed" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#{{ panel_id }}-body"
                        aria-expanded="false" aria-controls="{{ panel_id }}-body">
                  <span class="juris-header">
                    <span class="badge bg-secondary me-2">{{ jur }}</span>
                    <span class="text-muted small">{{ rows|length }} document{{ '' if rows|length == 1 else 's' }}</span>
                  </span>
                </button>
              </h2>
              <div id="{{ panel_id }}-body" class="accordion-collapse collapse" aria-labelledby="{{ panel_id }}-head">
                <div class="accordion-body p-0">
                  <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                      <thead class="table-light">
                        <tr>
                          <th style="width:18%">Track</th>
                          <th style="width:42%">Title</th>
                          <th style="width:10%">Issued</th>
                          <th style="width:10%">Version</th>
                          <th style="width:20%" class="text-center">PDF / Preview / History</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for row in rows %}
                          {% set title = row.title or row.name %}
                          {% set safe_id = (jur ~ '-' ~ loop.index)|replace(' ','-') %}
                          <tr>
                            <td>{{ row.track }}</td>
                            <td>{{ title }}</td>
                            <td>{{ row.issued }}</td>
                            <td>{{ row.version }}</td>
                            <td class="text-center">
                              <div class="d-inline-flex align-items-center">
                                {% if row.pdf_url %}
                                  <a class="btn btn-outline-primary btn-sm btn-wrapped"
                                     href="{{ row.pdf_url }}" target="_blank" rel="noopener">Open<br>PDF</a>
                                  <button type="button"
                                          class="btn btn-secondary btn-sm ms-2"
                                          data-bs-toggle="modal"
                                          data-bs-target="#preview-{{ safe_id }}">Preview</button>
                                {% else %}
                                  <span class="text-muted">No PDF</span>
                                {% endif %}
                                {% if row.history_url %}
                                  <a class="btn btn-outline-secondary btn-sm ms-2"
                                     href="{{ row.history_url }}" target="_blank" rel="noopener">History</a>
                                {% endif %}
                              </div>

                              {% if row.pdf_url %}
                                <!-- PDF Preview Modal -->
                                <div class="modal fade" id="preview-{{ safe_id }}" tabindex="-1" aria-hidden="true">
                                  <div class="modal-dialog modal-xl modal-dialog-scrollable">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <h5 class="modal-title">{{ title }}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                      </div>
                                      <div class="modal-body p-0" style="height:75vh">
                                        <iframe
                                          src="{{ row.pdf_url }}#view=FitH"
                                          style="width:100%;height:100%;border:0"
                                          referrerpolicy="no-referrer"
                                          onerror="this.replaceWith(Object.assign(document.createElement('div'),{className:'p-3',innerHTML:`Embedding blocked. <a href='{{ row.pdf_url }}' target='_blank' rel='noopener'>Open PDF</a>`}))"
                                        ></iframe>
                                      </div>
                                      <div class="modal-footer">
                                        <a class="btn btn-primary" href="{{ row.pdf_url }}" target="_blank" rel="noopener">Open in new tab</a>
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              {% endif %}
                            </td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

      </div>
    </div>
  </main>

  <!-- Bootstrap 5.3.2 (JS) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>
</html>
