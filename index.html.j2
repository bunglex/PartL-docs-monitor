<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Energy Docs Monitor</title>
  <style>table{border-collapse:collapse}td,th{border:1px solid #ddd;padding:6px}</style>
</head>
<body>
  <h1>Building Energy Docs â€“ Monitor</h1>
  <p>Items: {{ items|length }}</p>
  <table>
    <thead><tr><th>Jurisdiction</th><th>Name</th><th>Version</th><th>PDF</th><th>History</th></tr></thead>
    <tbody>
    {% for it in items %}
      <tr>
        <td>{{ it.jurisdiction }}</td>
        <td>{{ it.name }}</td>
        <td>{{ it.rule_version }}</td>
        <td><a href="{{ it.source_url }}">Open PDF</a></td>
        <td><a href="history/{{ it.slug }}.html">History</a></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  <p>Machine-readable: <a href="current.json">current.json</a></p>
</body>
</html>
